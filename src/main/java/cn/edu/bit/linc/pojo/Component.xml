<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.bit.linc.dao.IComponent">
    <select id="getComponents" resultType="cn.edu.bit.linc.pojo.Component">
        SELECT * from component
    </select>
    
    <select id="getComponentByProductID" parameterType="Integer" resultType="cn.edu.bit.linc.pojo.Component">
        select component.* from component, productdetail where productdetail.productid = #{productID} and productdetail.componentid = component.componentid
    </select>
    
    <select id="getComponentbyComponentName" parameterType="String" resultType="cn.edu.bit.linc.pojo.Component">
        select * from component where componentname = #{componentName}
    </select>
    
    <select id="getComponentByBarcodeID" parameterType="Integer" resultType="cn.edu.bit.linc.pojo.Component">
        select component.* from component, barcodedetail where barcodedetail.barcodeid = #{barcodeID} and barcodeDetail.componentid = component.componentid
    </select>
    
    <insert id="addComponent" useGeneratedKeys="true" keyProperty="componentID" parameterType="cn.edu.bit.linc.pojo.Component">
        insert into component (componentName) values (#{componentName})
    </insert>
    
</mapper>
