<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<properties resource="db.properties" />
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
	    <mapper resource="cn/edu/bit/linc/pojo/Attribute.xml"/>
	    <mapper resource="cn/edu/bit/linc/pojo/Barcode.xml"/>
	    <mapper resource="cn/edu/bit/linc/pojo/Merchant.xml"/>
	    <mapper resource="cn/edu/bit/linc/pojo/Order.xml"/>
        <mapper resource="cn/edu/bit/linc/pojo/Product.xml"/>
        <mapper resource="cn/edu/bit/linc/pojo/Component.xml"/>
        <mapper resource="cn/edu/bit/linc/pojo/User.xml"/>
        
    </mappers>

</configuration>